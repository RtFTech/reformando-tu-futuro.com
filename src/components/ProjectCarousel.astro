---
export interface Props {
  category: string;
  images: string[];
  altPrefix: string;
  id: string;
}

const { category, images, altPrefix, id } = Astro.props;
---

<div class="carousel-section">
  <div class="carousel-label">
    <span class="project-category-badge">{category}</span>
  </div>
  <div class="projects-carousel">
    <div class="carousel-container">
      <div class="carousel-track" id={`carousel-track-${id}`}>
        {
          images.map((image, index) => (
            <div class="carousel-slide">
              <div class="project-image">
                <img src={image} alt={`${altPrefix} ${index + 1}`} />
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <button class="carousel-btn prev-btn" id={`prev-btn-${id}`}>
      <i class="lni lni-chevron-left"></i>
    </button>
    <button class="carousel-btn next-btn" id={`next-btn-${id}`}>
      <i class="lni lni-chevron-right"></i>
    </button>

    <div class="carousel-dots" id={`carousel-dots-${id}`}>
      <!-- Dots will be generated by JavaScript -->
    </div>
  </div>
</div>
